<h1>Edit Movie</h1>

<%= simple_form_for @movie, :html => { :multipart => true } do |f| %>
    <%= f.select :category_id, @categories %>
    <%= f.input :title, label: "Movie Title" %>
    <%= f.input :description %>
    <%= f.input :director %>
    <%= f.input :release, label: "Date of Release" %>
    <%= f.file_field :picture %>
    <%= f.button :submit %>
<% end %>